#test name: bindtomac-network-static-to-dhcp-pre-single
# rhbz#1432886
url @KSTEST_URL@
install
%include /tmp/ksinclude
%pre
echo "network --device=ens3 --bootproto dhcp --activate --bindto=mac" >> /tmp/ksinclude
%end


bootloader --timeout=1
zerombr
clearpart --all
autopart

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end

%post --nochroot

@KSINCLUDE@ post-nochroot-lib-network.sh

check_gui_configurations ens3

%end

%post

@KSINCLUDE@ post-lib-network.sh

check_device_connected ens3 yes
check_ifcfg_key_exists ens3 IPADDR no
check_ifcfg_key_exists ens3 PREFIX no
check_ifcfg_key_exists ens3 NETMASK no
check_ifcfg_key_exists ens3 GATEWAY no
check_device_connected ens3 yes
check_number_of_device_ipv4_addresses ens3 1
check_device_ifcfg_bound_to_mac ens3

# No error was written to /root/RESULT file, everything is OK
if [[ ! -e /root/RESULT ]]; then
   echo SUCCESS > /root/RESULT
fi
%end

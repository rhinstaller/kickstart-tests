#version=DEVEL
#test name: packages-default
#
# Check the %packages --default flag works.

%ksappend repos/default.ks
%ksappend common/common_no_payload.ks

%packages --default
%end

%post
if [[ "@KSTEST_OS_NAME@" == "rhel" ]]; then
   PKG_NAME="redhat-release"
else
   PKG_NAME="fedora-release"
fi

rpm -q ${PKG_NAME}
if [ $? -eq 0 ]; then
    echo SUCCESS > /root/RESULT
else
    echo '*** ${PKG_NAME} package was not installed' > /root/RESULT
fi
%end

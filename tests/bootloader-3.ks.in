%ksappend repos/default.ks
network --bootproto=dhcp

bootloader --timeout=1 --boot-drive=vda --nombr

autopart
clearpart --all
zerombr

keyboard us
lang en
timezone America/New_York
rootpw qweqwe
shutdown

%packages
%end


%pre-install
# Get the MBR after the partitioning.
dd if=/dev/vda bs=512 count=1 of=/tmp/pre_install_mbr_content.bin
%end


%post --nochroot
# Get the current MBR.
dd if=/dev/vda bs=512 count=1 of=/tmp/current_mbr_content.bin

# Check the MBR.
cmp /tmp/pre_install_mbr_content.bin /tmp/current_mbr_content.bin
if [[ $? -ne 0 ]]; then
    echo '*** Failed check: MBR was not changed' >> /mnt/sysroot/root/RESULT
else
    echo SUCCESS > /mnt/sysroot/root/RESULT
fi
%end
